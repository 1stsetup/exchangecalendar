<!DOCTYPE overlay [
    <!ENTITY % lightningDTD SYSTEM "chrome://lightning/locale/lightning.dtd">
    %lightningDTD;
    <!ENTITY % dtd3 SYSTEM "chrome://exchangecalendar/locale/ecCalendarCreation.dtd" > 
    %dtd2;

]>

<overlay id="exchange-imip-bar" xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
    <script type="application/javascript"
            src="chrome://exchangecalendar/content/imip-bar.js"/>
    <script type="application/javascript"
            src="chrome://exchangecalendar/content/calendar-summary-dialog.js"/>
    <vbox id="messagepanebox">
      <vbox id="singlemessage" insertbefore="msgHeaderView">
        <lightning-notification-bar id="imip-bar"
                                    collapsed="true"
                                    insertbefore="msgHeaderView"
                                    label="&lightning.imipbar.description;">
	  <button id="imip-button4" label="Forward invite" actionMethod="EX-FORWARD" oncommand="forwardInviteUsingItip()"/>
        </lightning-notification-bar>
      </vbox>
    </vbox>
</overlay>
