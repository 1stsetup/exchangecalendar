<?xml version="1.0"?>
 <!DOCTYPE dialog [ 
    <!ENTITY % delegateFolder1DTD SYSTEM "chrome://exchangecalendar/locale/delegate-folder.dtd" > 
      %delegateFolder1DTD;
]> 
<!--
